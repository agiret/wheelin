<div class="flex-container">
  <div class="wheelies">
    <form action="<%= wheelies_path %>" method="get" class="form-inline">
      <div class="form-row">
        <div class="form-group col">
            <!-- <label class="control-label" for="query">Category</label> -->
          <select class="form-control" name="query" id="search_home" value= "<%= params[:query] %>">
            <option>
              <% if params[:query].nil? %>
                All
              <% else %>
                <%= params[:query] %>
              <% end %>
            </option>
            <% Category.all.each do |category| %>
              <option><%= category.name %></option>
            <% end %>
          </select>
        </div>
        <div class="form-group col">
          <!-- <label class="control-label" for="location">Where?</label> -->
          <input class="form-control" type="text" name="location" placeholder="Search for a place" value="<%= params[:location] %>">
        </div>
        <div class="form-group col">
          <input class="btn btn-success" type="submit" value="Search">
        </div>
      </div>
    </form>
    <div class="row">
      <% @wheelies.each do |wheely| %>
        <div class="col-xs-12 col-sm-6 col-md-4 wheely_card">
          <%= render '/shared/card', wheely: wheely  %>
        </div>
      <% end%>
    </div>
  </div>
  <div
    id="map"
    data-markers="<%= @markers.to_json %>">
  </div>
</div>
