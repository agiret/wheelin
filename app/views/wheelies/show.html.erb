
<%= cl_image_tag @wheely.photo, height: 300, width: 400, crop: :fill %>
<h3><%= @wheely.category %></h3>
<h1> <%= @wheely.title %></h1>

<p> <%= @wheely.description %></p>
<p> <%= @wheely.price %> <i class="fas fa-euro-sign"></i></p>

<% if policy(@wheely).update? %>
  <%= link_to 'Edit', edit_wheely_path(@wheely) %> <br>
<% end %>
<% if policy(@wheely).destroy? %>
  <%= link_to "Delete", wheely_path(@wheely),
      method: :delete,
      data: { confirm: "Are you sure?" } %> <br>
<% end %>

<%= link_to 'Back to Wheelies', wheelies_path %>
