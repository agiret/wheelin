
<div class="wheely-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= @wheely.photo %>);">
</div>
<%= link_to '< Back to Wheelies', wheelies_path, class: "btn-back" %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="ad-box">
        <h3>Category > <%= @wheely.category.name %></h3>
        <h1> <%= @wheely.title %></h1>
        <p> <%= @wheely.description %></p>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="map-booking-box">
        <div
          id="map"
          style="width: 100%;
          height: 250px;"
          data-markers="<%= @marker.to_json %>"
        ></div>
        <div class="row">
          <div class="col-xs-6">
            <div id="price-booking">
            <p> <%= @wheely.price %> â‚¬ / jr </i></p>
            </div>
          </div>
          <div class="col-xs-6">
            <div id="btn-booking">
              <%= link_to 'Book this wheely !', new_wheely_booking_path(@wheely.id), class: "btn btn-success" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<% if policy(@wheely).update? %>
  <%= link_to 'Edit', edit_wheely_path(@wheely) %> <br>
<% end %>
<% if policy(@wheely).destroy? %>
  <%= link_to "Delete", wheely_path(@wheely),
      method: :delete,
      data: { confirm: "Are you sure?" } %> <br>
<% end %>

