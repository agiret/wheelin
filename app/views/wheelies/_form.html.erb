
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="card-form">
        <h1>Add a new Wheely</h1>
        <%= simple_form_for(@wheely) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :title %>
            <%= f.association :category, include_blank: false %>
            <%= f.input :address %>
            <%= f.input :description %>
            <%= f.input :price, label: 'Price (â‚¬ / jr)' %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
          </div>

          <div class="form-actions">
            <%= link_to 'Cancel', :back, class: "btn btn-default"%>
            <%= f.button :submit, 'Post my wheely', class: "btn btn-success pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
